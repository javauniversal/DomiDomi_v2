<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gris">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <include android:id="@+id/app_bar879"
            layout="@layout/app_imagen" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Descripcion"
                    android:textSize="@dimen/dimen_letra_app"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_weight="1"
                    android:layout_margin="4dip"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/precio"
                    android:textSize="@dimen/dimen_letra_app"
                    android:layout_margin="5dip"
                    android:gravity="right" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dimen_letra_app"
                android:layout_margin="8dip"
                android:id="@+id/descripcion" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ingredientes"
                android:textSize="@dimen/dimen_letra_app"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="4dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/dimen_letra_app"
                android:layout_margin="5dip"
                android:id="@+id/ingredientes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cantidad"
                android:textSize="@dimen/dimen_letra_app"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_margin="4dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|fill_vertical">

                <com.appgestor.domidomi.Activities.QuantityView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/quantityView_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:qv_minQuantity="1"
                    android:layout_marginTop="10dp"
                    app:qv_quantity="1" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/paterAdiciones">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/adiciones_extras"
                    android:textSize="@dimen/dimen_letra_app"
                    android:layout_weight="1"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="4dip" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cantidad"
                    android:textSize="@dimen/dimen_letra_app"
                    android:layout_weight="3.7"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="4dip"
                    android:gravity="center" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/liner_adiciones_dinamic"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precios"
                android:textSize="@dimen/dimen_letra_app"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:layout_margin="4dip"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Productos"
                    android:textSize="@dimen/dimen_letra_app"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/color_negro"
                    android:id="@+id/totalProducto" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Adiciones"
                    android:textSize="@dimen/dimen_letra_app"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_marginRight="4dp"
                    android:textColor="@color/color_negro"
                    android:id="@+id/totalAdiciones" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor Total:"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_letra_app"
                    android:textColor="@color/color_negro"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textStyle="bold"
                    android:layout_margin="2dip"
                    android:textSize="@dimen/dimen_letra_app"
                    android:id="@+id/totalFinal"
                    android:textColor="@color/color_negro"
                    android:layout_gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textSize="@dimen/dimen_letra_app"
                    android:visibility="gone"
                    android:layout_margin="8dip"
                    android:id="@+id/totalFinalOculto"
                    android:textColor="@color/color_negro"
                    android:layout_gravity="right" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comentario"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_letra_app"
                android:textColor="@color/colorAccent"
                android:layout_margin="4dip"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="6dp"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/EditComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:maxLength="150"
                    android:background="@drawable/rounded_corner"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:scrollHorizontally="false"
                    android:minWidth="10.0dip"
                    android:textSize="@dimen/dimen_letra_app"
                    android:maxWidth="180dip" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar"
                android:id="@+id/btnAdd"
                style="@style/BrandButtonStyle2"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>