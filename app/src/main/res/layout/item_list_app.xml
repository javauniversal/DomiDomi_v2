<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_credit_card_black_24dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="9dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_toEndOf="@+id/iv_icon">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="@dimen/dimen_letra_app" />

        <TextView
            android:id="@+id/valorProductoCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor: "
            android:textSize="@dimen/dimen_letra_app" />

        <TextView
            android:id="@+id/totalProductoCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:textSize="@dimen/dimen_letra_app" />

        <TextView
            android:id="@+id/tv_adiciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adiciones"
            android:visibility="visible"
            android:textSize="@dimen/dimen_letra_app" />

        <TextView
            android:id="@+id/totalAdicion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="@dimen/dimen_letra_app" />

        <TextView
            android:id="@+id/tv_preci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valor Total:"
            android:textSize="@dimen/dimen_letra_app" />

    </LinearLayout>



</RelativeLayout>