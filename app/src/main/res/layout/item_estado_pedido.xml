<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="9dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/establecimiento"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textSize="@dimen/dimen_letra_app"
                android:id="@+id/txtEmpresa" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cantidad"
                android:textStyle="bold"
                android:layout_weight="1.7"
                android:textSize="@dimen/dimen_letra_app"
                android:id="@+id/txtCantidad" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
            android:textStyle="bold"
            android:id="@+id/txtDetalle"
            android:text="@string/categoria_filtro"
            android:textSize="@dimen/dimen_letra_app"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/txtFecha"
            android:textSize="@dimen/dimen_letra_app"
            android:text="@string/fecha"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.4"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_letra_app"
            android:id="@+id/txtNumeroOrden"
            android:text="NÃºmero de Pedido:"/>



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/direcci_n"
                android:textSize="@dimen/dimen_letra_app"
                android:textStyle="bold"
                android:id="@+id/txtDireccion" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/estado"
            android:textSize="@dimen/dimen_letra_app"
            android:id="@+id/txtEstado"
            android:gravity="fill_vertical" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancelar_pedido"
        android:id="@+id/btnCancel"
        style="@style/BrandButtonStyle2"
        android:layout_gravity="right" />

</LinearLayout>