<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grid_item_bg_pressed"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="17dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dip"
            android:elevation="10dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_empresa"
                    android:textSize="@dimen/dimen_letra_app"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margen_izquierdo"
                    android:text=""
                    android:textSize="@dimen/dimen_letra_app"
                    android:id="@+id/txtNombreEmpresa"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/information"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/informacion" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dip"
            android:padding="@dimen/margin_informacioin"
            android:orientation="vertical"
            android:elevation="20dp"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nit"
                    android:textSize="@dimen/dimen_letra_app"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/textView4" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/folder_information"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/informacion" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/dimen_letra_app"
                    android:id="@+id/txtNit"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:padding="@dimen/margin_informacioin"
            android:elevation="10dp"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/informacion"
                    android:textSize="@dimen/dimen_letra_app"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/textView42" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView33"
                    android:src="@drawable/document_information"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/informacion"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/senales"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/dimen_letra_app"
                    android:id="@+id/textDireccion"
                    android:layout_below="@+id/textView42"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/dimen_letra_app"
                    android:id="@+id/txtTelefono"
                    android:layout_below="@+id/textView42"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:textSize="@dimen/dimen_letra_app"
                    android:id="@+id/txtCelulat"
                    android:layout_below="@+id/txtTelefono"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_informacioin"
            android:elevation="10dp"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sede_sucursales"
                    android:textSize="@dimen/dimen_letra_app"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:id="@+id/textView423" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/myTable"
                    android:layout_below="@+id/textView423" >

                </TableLayout>



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
